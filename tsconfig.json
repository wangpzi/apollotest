{
  "compilerOptions": {
    "target": "es2017",  // 可以根据需要调整为 "es5" 或 "es6"
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "noImplicitAny": false,  // 如果您想临时减少类型检查严格性
    "typeRoots": ["./node_modules/@types", "./src/types"]  // 指定类型定义位置
  },
  "include": [
    "src"
  ]
}
